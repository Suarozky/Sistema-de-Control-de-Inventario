<div id="confirmModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
  <div class="bg-white p-6 rounded-lg shadow-lg w-96">
    <h2 class="text-lg font-semibold mb-4">
      <%= local_assigns[:title] || "Confirmar cambios" %>
    </h2>
    
    <div id="changesList" class="mb-4 text-sm text-gray-700">
    </div>
    
    <div class="flex justify-end gap-2">
      <button id="cancelModal" 
              class="px-3 py-1.5 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors">
        <%= local_assigns[:cancel_text] || "Cancelar" %>
      </button>
      
      <button id="confirmSave" 
              class="px-3 py-1.5 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
        <%= local_assigns[:confirm_text] || "Confirmar" %>
      </button>
    </div>
  </div>
</div>