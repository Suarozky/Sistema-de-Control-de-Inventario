<% content_for :title, "Mis Productos" %>

<style>
  .current-product {
    background: linear-gradient(135deg, #e0f2fe 0%, #b3e5fc 100%);
  }
</style>

<div class="bg-gray-50 min-h-screen">
  <div class="max-w-4xl mx-auto p-4">

    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
      <div class="p-6 border-b border-gray-100">
        <h1 class="text-2xl font-semibold text-gray-900 mb-2">Mis Productos</h1>
        <div class="text-sm text-gray-600">
          <span class="font-medium"><%= @user.name %> <%= @user.lastname %></span>
        </div>
      </div>

      <!-- Stats -->
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-100">
        <div class="grid grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600">
              <%= @current_products.count + @previous_products.count %>
            </div>
            <div class="text-xs text-gray-500 uppercase tracking-wide">Total</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600"><%= @current_products.count %></div>
            <div class="text-xs text-gray-500 uppercase tracking-wide">Actuales</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600"><%= @previous_products.count %></div>
            <div class="text-xs text-gray-500 uppercase tracking-wide">Anteriores</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabla de productos -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <% if @current_products.any? || @previous_products.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-100">
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Asignación</th>
              </tr>
            </thead>
            <tbody>
              <% (@current_products + @previous_products).each_with_index do |product, index| %>
                <% latest_transaction = product.transactions.order(date: :desc).first %>
                <% user_transaction = product.transactions.where(ownerid: @user.id).order(date: :desc).first %>
                <tr class="<%= @current_products.include?(product) ? 'current-product' : (index.even? ? 'bg-white' : 'bg-gray-50') %>">
                  <td class="px-6 py-4 text-sm text-gray-900"><%= index + 1 %></td>
                  <td class="px-6 py-4 text-sm font-medium text-gray-900">
                    <% if product.brand.present? && product.model.present? %>
                      <%= product.brand %> <%= product.model %>
                    <% else %>
                      Producto #<%= product.id %>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm">
                    <% if @current_products.include?(product) %>
                      <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">Actual</span>
                    <% else %>
                      <span class="text-gray-500">Anterior</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <% if user_transaction %>
                      <%= user_transaction.date.strftime("%d/%m/%Y a las %H:%M") %>
                      <% if @current_products.include?(product) %>
                        <div class="text-xs text-gray-500 mt-1">Hace <%= time_ago_in_words(user_transaction.date) %></div>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12 px-6">
          <div class="text-gray-400 mb-3">
            <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No tienes productos asignados</h3>
          <p class="text-gray-500">Aún no se te han asignado productos en el sistema.</p>
        </div>
      <% end %>
    </div>


    <div class="mt-8 text-center">
      <%= link_to home_index_path, class: "inline-flex items-center px-6 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Volver al inicio
      <% end %>
    </div>
</div>
